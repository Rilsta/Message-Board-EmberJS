{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="user">Username</label>
          {{input value=user id="user"}}
        </div>

        <div class="form-group">
          <label for="reply">Enter a Answer:</label>
          {{input value=reply id="reply"}}
        </div>

        <button {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
<button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
